<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="dk.itu.mmad.bikeshare.BikeShareActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome To the App"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="24dp">

        <Button
            android:id="@+id/add_ride_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="ADD RIDE"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="24dp">

        <Button
            android:id="@+id/end_ride_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="END RIDE"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="24dp">

        <Button
            android:id="@+id/list_ride_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="LIST RIDES"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <ListView
        android:id="@+id/main_list_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize = "12sp"></ListView>

